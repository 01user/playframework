if [ $SCRIPT = "." ]; then
  $SCRIPT/../play it:run
else
  ../$SCRIPT/../play it:run
fi

echo "RUNNING APP SPECS"
if [ $SCRIPT = "." ]; then
  $SCRIPT/../play test
else
  ../$SCRIPT/../play test
fi

cd $CURRENT

