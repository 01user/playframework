echo "PLAYFRAMEWORK CORE TEST RUNNER"
set -e
export CURRENT=`pwd`
export SCRIPT=`dirname $0`
$SCRIPT/cleanIvyCache
$SCRIPT/build publish-local

echo "RUNNING FRAMEWORK SPECS"
`dirname $0`/build test
cd `dirname $0`/../integrationtest

